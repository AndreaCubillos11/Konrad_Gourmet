const { DataTypes } = require("sequelize");
const sequelize = require("../config/database");

// Modelos relacionados
const Usuario = require('./Usuario');
const Sucursal = require('./Sucursal');

const UsuarioSucursal = sequelize.define("UsuarioSucursal", {
  id_usuario_sucursal: {
    type: DataTypes.INTEGER,
    autoIncrement: true,
    primaryKey: true
  },
  id_usuario: {
    type: DataTypes.INTEGER,
    allowNull: false,
    references: {
      model: 'usuario',
      key: 'id_usuario'
    }
  },
  id_sucursal: {
    type: DataTypes.INTEGER,
    allowNull: false,
    references: {
      model: 'sucursal',
      key: 'id_sucursal'
    }
  }
},
{
  tableName: 'usuario_sucursal',
  timestamps: false
});

// ðŸ”— Relaciones
UsuarioSucursal.belongsTo(Usuario, {
    foreignKey: 'id_usuario',
    onUpdate: 'CASCADE',
    onDelete: 'CASCADE',
});

UsuarioSucursal.belongsTo(Sucursal, {
    foreignKey: 'id_sucursal',
    onUpdate: 'CASCADE',
    onDelete: 'CASCADE',
});

// Relaciones inversas para acceder fÃ¡cil desde Usuario y Sucursal
Usuario.hasMany(UsuarioSucursal, { foreignKey: 'id_usuario' });
Sucursal.hasMany(UsuarioSucursal, { foreignKey: 'id_sucursal' });

module.exports = UsuarioSucursal;